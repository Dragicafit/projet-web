<% var title = 'Authentication Example' %>
<% include head %>

<h1>Login</h1>
<%- message %>
<form method="post" action="/inscription">
  <p>
    <label>Pseudo :</label>
    <input type="text" name="pseudo" size="30" placeholder="Pseudo" required>
  </p>
  <p>
    <label>Mot de passe :</label>
    <input type="password" name="motDePasse" size="30" placeholder="Mot de passe" pattern=".{8,32}" required>
  </p>
  <p>
    <label>Confirmer mot de passe :</label>
    <input type="password" name="motDePasse2" size="30" placeholder="Mot de passe" pattern=".{8,32}" required>
  </p>
  <p>
    <input type="submit" value="Inscription">
  </p>
</form>

<% include foot %>